---
const { variant = "primary", size = "medium" } = Astro.props;

const buttonStyling = "text-black ";

const variantClasses = {
  primary:
    "bg-[#FF3859] text-white hover:bg-[#FF6B84] hover:text-white px-3 py-2 rounded-full transition duration-300 ease-in-out drop-shadow-lg",

  secondary:
    "bg-[#F3F1F1] text-black hover:bg-[#D8D5D5] hover:text-black px-3 py-2 rounded-full transition duration-300 ease-in-out drop-shadow-lg",

   tertiary:
    "bg-[#FF3859] text-white hover:bg-[#FF6B84] hover:text-white px-3 py-2 rounded-full transition duration-300 ease-in-out drop-shadow-lg",
};

const sizeClasses = {
  large: "px-8 py-6 text-lg lg:px-14 lg:text-xl",
  medium: "px-8 py-1.5 text-md",
  small: "px-7 py-1.5 text-sm",
};
---

<button
  class:list={[buttonStyling, variantClasses[variant], sizeClasses[size]]}
>
  <slot />
</button>
